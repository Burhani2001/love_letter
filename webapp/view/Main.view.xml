<mvc:View controllerName="de.ososoft.llresults.resultsbyweekfreestyle.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    
	<Table id="idTable"
		 items="{path: 'data>/ResultsByWeek',
		 		 sorter: { 	path: 'CurrentWeek',
				 			group: true } }">
		<headerToolbar>
			<OverflowToolbar>
				<Title text="Hearts by Weeks"/>
				<SearchField width="20%"/>
				<Button tooltip="Sort" icon="sap-icon://sort" />
				<Button tooltip="Group" icon="sap-icon://group-2" />
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column width="12em">
				<Text text="Player"/>
			</Column>
			<Column width="12em">
				<Text text="2023/5"/>
			</Column>
			<Column width="12em">
				<Text text="2023/6"/>
			</Column>
			<Column width="12em">
				<Text text="2023/7"/>
			</Column>
			<Column width="12em">
				<Text text="2023/8"/>
			</Column>
			<Column width="12em">
				<Text text="2023/9"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem vAlign="Middle"> 
				<cells>
					<ObjectIdentifier title="{data>PlayerName}"/>
					<Text text="{data>CurrentWeek}"/>
                    <Text text="{data>SumOfHearts}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>
